<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.bikedreamer.subtitles"
       name="Funsusbs Subtitles"
       version="1.0.0"
       provider-name="yurybubnov">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
  </requires>
  <extension point="xbmc.python.subtitles"
             library="default.py" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">XBMC Funsubs.ru Subtitles support</summary>
    <description lang="en">Search and download subtitles from funsubs.ru.Subtitle button on OSD needs to be activated and path set to XBMC Funsubs Subtitles under System-> Skin-> Addon Scripts</description>
    <platform>all</platform>
  </extension>
</addon>
